<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FriendFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/load_fragment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:foregroundTint="@color/black"
            android:indeterminateTint="@color/black"
            android:indeterminateTintMode="src_atop" />

        <ImageView
            android:id="@+id/not_found"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/conversation_person" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="15dp">

                    <EditText
                        android:id="@+id/searchFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1A0D2F8A"
                        android:drawableLeft="@drawable/search_icon"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-black"
                        android:hint="Search..."
                        android:padding="8dp"
                        android:textFontWeight="500" />
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutSearch"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp" />
            </RelativeLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/addFriend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#192497"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/add_user"
                app:tint="@color/white">

            </ImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>